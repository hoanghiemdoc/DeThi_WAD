<h2>Create</h2>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">CREATE CATEGORY</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() // cho 1 token vao form
